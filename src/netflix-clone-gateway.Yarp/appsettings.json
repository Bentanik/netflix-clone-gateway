{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "auth-route": {
                "ClusterId": "auth-cluster",
                "Match": {
                    "Path": "/auth/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/auth" }
                ]
            },
            "media-route": {
                "ClusterId": "media-cluster",
                "Match": {
                    "Path": "/media/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/media" } 
                ]
            }
        },
        "Clusters": {
            "auth-cluster": {
                "Destinations": {
                    "d1": { "Address": "http://localhost:5001" }
                }
            },
            "media-cluster": {
                "Destinations": {
                    "d1": { "Address": "http://localhost:5002" }
                },
                "HttpClient": {
                    "DangerousAcceptAnyServerCertificate": false,
                    "Timeout": "00:30:00"
                }
            }
        }
    }
}
